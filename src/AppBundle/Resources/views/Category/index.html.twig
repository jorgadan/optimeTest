{% extends 'base.html.twig' %}

{% block body %}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Lista de Categorías</h2>
    </div>
    <div class="panel-body">

        <table class="table table-striped table-bordered" id="table">
            <thead>
            <tr class="replace-inputs">
                <th>Nombre</th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Activo</th>
                <th>Acción</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>{{ category.code }}</td>
                    <td>{{ category.description }}</td>
                    <td>{{ category.active }}</td>
                    <td><a href="{{ path('category_edit', {id: category.id}) }}"><i class="glyphicon glyphicon-pencil" data-toggle="tooltip" title="Editar"></i></a>
                        {#<a href="{{ path('user_delete', {id: user.id}) }}"><i class="icon-trash" data-toggle="tooltip" title="Eliminar"></i></a><br>#}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <br>
        <a class="btn btn-success pull-right" href="{{ path('category_new') }}">Crear nueva categoría</a>
        <br>
    </div>
</div>
{% endblock %}
